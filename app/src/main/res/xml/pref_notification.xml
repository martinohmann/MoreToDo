<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="notifications_enable"
        android:summary="@string/pref_description_notifications_enable"
        android:title="@string/pref_title_notifications_enable" />

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <CheckBoxPreference
        android:defaultValue="true"
        android:dependency="notifications_enable"
        android:key="notifications_vibrate"
        android:title="@string/pref_title_notifications_vibrate" />

</PreferenceScreen>
